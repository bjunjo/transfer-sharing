<% include ./partials/header %>

<div class="ui main text container segment">
    <!-- <div class="ui huge header">New Story</div> -->
    <form class="ui form" action="/stories" method="POST">
      <div class="field">
          <label>Title</label>
          <input type="text" name="story[title]" placeholder="title">
      </div>
      <div class="field">
          <label>Image</label>
          <input type="text" name="story[image]" placeholder="image">
      </div>
      <div class="field">
          <label>Content</label>
          <textarea name="story[body]" placeholder="Tell your story..."></textarea>
      </div>
      <input class="ui violet big basic button" type="submit">
    </form>
</div>
